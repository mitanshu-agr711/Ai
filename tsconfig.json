{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "NodeNext",
    "outDir": "./dist", 
    "rootDir": "./src", 
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}
